<div id="player-service" class="service">
  <div class="editor-section">

    <div class="player-selector">
      <input type="text" id="search-player" placeholder="Search username or id...">
      <ul id="player-list"></ul>
    </div>

    <div id="player-profile" class="player-profile">
      <img id="profile-img" src="/images/everyone-avatar.jpg" class="profile-avatar">
      <h2 id="profile-username">Select a player</h2>
      <div id="profile-extra" class="profile-extra">
        <p id="profile-coins">Coins: -</p>
        <p id="profile-score">Score: -</p>
      </div>
    </div>

    <div id="player-json-container">
      <textarea id="player-json" readonly placeholder="Player JSON will appear here..."></textarea>
      <button id="save-btn" disabled>Save Changes</button>
    </div>

  </div>
</div>
